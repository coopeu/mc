<div class="w-full min-h-[100vh] flex items-center justify-center">
  <div class="max-w-xl w-full mx-auto shadow-lg bg-gray-200 rounded-lg py-12 text-teal-700">
    <%= render 'layouts/flash' %>
    <h2 class="text-3xl mb-8 text-center font-bold"><i class="fas fa-edit mr-2"></i> Edita Imatge</h2>
    <div class="w-3/4 mx-auto">
      <% if @image.errors.any? %>
        <div class="mb-4 text-red-500">
          <h3 class="font-bold">Errors:</h3>
          <ul class="text-sm">
            <% @image.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with(model: [@sortide, @image], local: true) do |f| %>
        <div class="field mb-4">
          <%= f.label :fitxer_imatge, "fitxer imatge < 3MB", class: "mb-2 text-lg" %><br />
          <%= f.file_field :file, autofocus: true, class: "w-full rounded-lg bg-gray-50 border px-2" %>
        </div>
        <div class="field mb-4">
          <%= f.label :etiqueta, class: "mb-2 text-lg" %><br />
          <%= f.text_field :caption, class: "w-full rounded-lg bg-gray-50 px-2" %>
        </div>
        <div class="actions w-full">
          <%= f.submit "Actualitza l'Imatge", class: "btn-sm" %>
        </div>
      <% end %>
    </div>
  </div>
</div>