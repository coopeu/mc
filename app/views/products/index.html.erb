<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "The Best Products" %>

  <h1 class="font-bold text-6xl text-center font-broken text-indigo-700">Sortides en moto</h1>

  <div id="products" class="min-w-full grid md:grid-cols-4 gap-8">
    <% @products.each do |product| %>
      <%= render product %>
    <% end %>
  </div>

  <div class="mt-4 w-full">
    <%= link_to "Veu per categories", categories_path, class: "rounded-lg h-80 w-full bg-blue-600 text-sm text-white font-semibold p-2" %>
  </div>




</div>
