<div class="w-full min-h-[100vh] flex items-center justify-center" style="background-image: url(<%= asset_path('moto_collage1.jpeg') %>); background-size: cover; background-position: center;">
  <div class="max-w-xl w-full mx-auto shadow-lg bg-gray-200 rounded-lg py-12 text-teal-700">
    <%= render 'layouts/flash' %>
    <div class='flex justify-center mb-4'>
      <%= image_tag("MRC250h.png", alt: "Mil Revolts", class: "ml-6 object-center mb-8") %>
    </div>
    <h2 class="text-3xl mb-8 text-center font-bold"><i class="fas fa-sign-in-alt mr-2"></i> Entra</h2>
    <div class="w-3/4 mx-auto">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field mb-4">
          <%= f.label :email, class: "mb-2 text-lg" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full rounded-lg bg-gray-50 border px-2" %>
        </div>
        <div class="field mb-4">
          <%= f.label :password, class: "mb-2 text-lg" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "w-full rounded-lg bg-gray-50 px-2" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field mb-4">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="actions w-full">
          <%= f.submit "Entra", class: "bg-teal-500 w-full font-bold p-2 text-teal-100 rounded-lg cursor-pointer hover:bg-teal-700 hover:text-teal-300" %>
        </div>
      <% end %>
      <div class="flex flex-col items-center mt-4 gap-4">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>