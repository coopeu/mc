
<div class="w-full min-h-[100vh] flex items-center justify-center" style="background-image: url(<%= asset_path('moto_collage1.jpeg') %>); background-size: cover; background-position: center;">
  <div class="max-w-xl w-full mx-auto shadow-lg bg-gray-200 rounded-lg py-12 text-teal-700 opacity-[.90]">
    <div class='flex justify-center mb-4'>
      <%= image_tag("MRC250h.png", alt: "Mil Revolts", class: "ml-6 object-center mb-8") %>
    </div>
    <h2 class="text-3xl mb-8 text-center font-bold"><i class="fas fa-sign-in-alt mr-2"></i> Canvia la clau</h2>
    <div class="w-3/4 mx-auto">

      <div class="flex flex-col items-center mt-4 gap-4">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="field my-2">
            <%= f.label :clau, "Nova clau", class: "mb-2 text-lg" %><br />
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em><br />
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "nova clau", class: "w-full rounded-lg bg-gray-50 border px-2" %>
          </div>

          <div class="field my-2">
            <%= f.label :password_confirmation, "Confirma la clau", class: "mb-2 text-lg" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "nova clau", class: "w-full rounded-lg bg-gray-50 px-2" %>
          </div>

          <div class="actions my-2">
            <%= f.submit "Canvia la meva clau", class: "bg-teal-500 w-full font-bold p-2 text-teal-100 rounded-lg cursor-pointer hover:bg-teal-700 hover:text-teal-300" %>
          </div>
        <% end %>
      </div>

      <div class="flex flex-col items-center mt-4 gap-4">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>