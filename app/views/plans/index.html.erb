<section id="plans" class="bg-teal-100 py-8">
  <div class="container mx-auto">
    <h1 class="text-4xl font-bold leading-tight text-center text-teal-600">
      <i class="fas fa-tags mr-2 text-2xl"></i> Tarifes de Subscripció
    </h1>
    <div class="h-1 mx-auto w-1/2 opacity-25 my-4 rounded-t bg-gradient-to-r from-teal-500 to-teal-800"></div>
    <div class="flex flex-col sm:flex-row justify-center pt-12 my-12 sm:my-4">
      <% @plans.each do |plan| %>
        <div class="flex-none sm:flex-1 md:flex-auto lg:flex-initial rounded-t-lg bg-teal-900 mt-3 mr-2 flex flex-col">
          <div class="p-8 text-2xl font-bold text-center text-yellow-400 txt-shadow-2"><%= plan.nom %></div>
          <div class="border-0 border-grey-light border-t border-solid">
            <div class="text-center border-0 border-grey-light border-t border-b border-solid py-4 text-yellow-200">
              Accés: <span class='uppercase text-xl font-bold'><%= plan.accesWeb %></span>
            </div>
            <div class="text-center border-0 border-grey-light border-b border-solid py-4 text-sm text-yellow-200">
              Sortides a l'any: <span class='text-xl font-bold'><%= plan.maxSortidesAny %></span>
            </div>
            <div class="text-center border-0 border-grey-light border-b border-solid py-4 text-yellow-200">
              <b>Descompte mig:</b><br/>
              Inscripcions: <span class='text-xl font-bold'><%= plan.descompteInscripcions %></span> %<br/>
              Botiga: <span class='text-xl font-bold'><%= plan.descompteBotiga %></span> %<br/>
            </div>
          </div>
