<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md">
  <h1 class="text-2xl font-bold mb-4 text-center">Edit Sortides Fetes</h1>
  <%= form_with(model: @sortides_fete, local: true) do |form| %>
    <div class="mb-4">
      <%= form.label :title, class: 'block text-gray-700 font-medium mb-2' %>
      <%= form.text_field :title, class: 'w-full px-3 py-2 border border-gray-300 rounded-xs focus:outline-hidden focus:ring-2 focus:ring-teal-500' %>
    </div>
    <div class="mb-4">
      <%= form.label :start_date, class: 'block text-gray-700 font-medium mb-2' %>
      <%= form.date_select :start_date, class: 'w-full px-3 py-2 border border-gray-300 rounded-xs focus:outline-hidden focus:ring-2 focus:ring-teal-500' %>
    </div>
    <div class="mb-4">
      <%= form.label :youtube_link, class: 'block text-gray-700 font-medium mb-2' %>
      <%= form.text_field :youtube_link, class: 'w-full px-3 py-2 border border-gray-300 rounded-xs focus:outline-hidden focus:ring-2 focus:ring-teal-500' %>
    </div>
    <div class="text-center">
      <%= form.submit 'Update', class: 'bg-teal-500 text-white px-4 py-2 rounded-xs hover:bg-teal-600 focus:outline-hidden focus:ring-2 focus:ring-teal-500' %>
    </div>
  <% end %>
</div>