<h1>Edita la Piulada</h1>
<%= form_with(model: @piulade, local: true) do |form| %>
  <% if @piulade.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@piulade.errors.count, "error") %> prohibited this piulade from being saved:</h2>
      <ul>
        <% @piulade.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.text_area :body, class: "border-b border-t-0 border-x-0 mb-6 px-6 pt-6 block w-full border-gray-200 focus:shadow-none focus:outline-hidden focus:ring-transparent focus:border-gray-300 resize-none min-h-[180px] text-lg" %>
